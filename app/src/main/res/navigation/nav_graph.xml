<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/HomeFragment">

    <fragment
        android:id="@+id/HomeFragment"
        android:name="com.example.pbl_koshi_app.HomeFragment"
        android:label="ホーム画面"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_HomeFragment_to_QuizFragment"
            app:destination="@id/QuizFragment" />

        <action
            android:id="@+id/action_HomeFragment_to_SpotListFragment"
            app:destination="@id/SpotListFragment" />

        <action
            android:id="@+id/action_HomeFragment_to_SpotDetailFragment"
            app:destination="@id/SpotDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/QuizFragment"
        android:name="com.example.pbl_koshi_app.QuizFragment"
        android:label="クイズ画面"
        tools:layout="@layout/activity_quiz" >

        <action
            android:id="@+id/action_QuizFragment_to_HomeFragment"
            app:destination="@id/HomeFragment" />
    </fragment>

    <fragment
        android:id="@+id/SpotListFragment"
        android:name="com.example.pbl_koshi_app.SecondFragment"
        android:label="スポット一覧画面"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SpotListFragment_to_HomeFragment"
            app:destination="@id/HomeFragment" />
        <action
            android:id="@+id/action_SpotListFragment_to_SpotDetailFragment"
            app:destination="@id/SpotDetailFragment" />


    </fragment>

    <fragment
        android:id="@+id/SpotDetailFragment"
        android:name="com.example.pbl_koshi_app.SpotDetailFragment"
        android:label="スポット詳細"
        tools:layout="@layout/fragment_spot_detail" >
        <argument
            android:name="spot_id"
            app:argType="string"
            android:defaultValue="KOSHI_SPOT_001" />

        <action
            android:id="@+id/action_SpotDetailFragment_to_HomeFragment"
            app:destination="@id/HomeFragment"
            app:popUpTo="@id/HomeFragment"
            app:popUpToInclusive="true" />

    </fragment>




</navigation>
