<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_brown"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".SpotDetailActivity">

    <ImageView
        android:id="@+id/spotImageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:background="#FFFFFF" /> <!-- 画像が読み込まれるまでの背景色 -->

    <TextView
        android:id="@+id/spotNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="#000000"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        tools:text="スポット名" /> <!-- 表示確認用の仮テキスト -->

    <TextView
        android:id="@+id/spotDescriptionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="#000000"
        tools:text="これはスポットの詳細な説明文です。このテキストはプレビューのために表示されています。" /> <!-- 表示確認用の仮テキスト -->

    <Button
        android:id="@+id/button_back_to_home"
        style="@style/BrownButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:text="ホームに戻る" />

</LinearLayout>
